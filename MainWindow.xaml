                          FontWeight="Bold"
                          VerticalAlignment="Center"
                          Margin="15,0"/>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0">
                    <Button Content="âˆ’" 
                            Width="30" 
                            Height="30" 
                            Margin="2"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="Minimize_Click"/>
                    <Button Content="âœ•" 
                            Width="30" 
                            Height="30" 
                            Margin="2"
                            Background="#FFC80037"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Contenido -->
        <Grid Grid.Row="1" Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="ðŸŸ¢ Servidor activo" 
                          x:Name="StatusText"
